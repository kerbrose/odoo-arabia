<?xml version="1.0" encoding="utf-8"?>
<odoo>


  <!-- FILTERS FOR PROGRESS INVOICE -->
  <record id="view_progress_invoice_filter" model="ir.ui.view">
    <field name="name">progress.invoice.select</field>
    <field name="model">progress.invoice</field>
    <field name="arch" type="xml">
      <search string="Search Invoices">
        <field name="name" string="Reference"
               filter_domain="['|', '|', ('name','=',self), ('reference','ilike',self), ('origin','ilike', self)]"/>
        <field name="partner_id" operator="child_of"/>
        <field name="create_uid"/>
        <filter name="draft" string="Draft Bills" domain="[('state','=', 'draft')]"/>
        <filter name="approved" string="Approved Bills" domain="[('state','=', 'approved')]"/>
        <filter name="running" string="Open Bills" domain="[('state','=', 'running'), ('last_bill','=', True)]"/>
        <group expand="0" string="Group By">
          <filter string="Contractor" domain="[]" context="{'group_by':'partner_id'}"/>
          <filter string="Project" domain="[]" context="{'group_by':'account_analytic_id'}"/>
          <filter string="Order Date" domain="[]" context="{'group_by':'date'}"/>
          <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
        </group>
      </search>
    </field>
  </record>
  <!-- FILTERS FOR PROGRESS INVOICE -->


  <!-- ACTION WINDOW FOR PROGRESS INVOICE -->
  <record id="draft_progress_invoice_action" model="ir.actions.act_window">
    <field name="name">Invoice</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">progress.invoice</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{"search_default_draft":1, 'default_type': 'in_invoice', 'type': 'in_invoice', 'journal_type': 'purchase'}</field>
    <field name="search_view_id" ref="view_progress_invoice_filter"/>
  </record>
  <!-- ACTION WINDOW FOR PROGRESS INVOICES -->


  <!-- MENU DRAFT PROGRESS INVOICE -->
  <menuitem
      id="draft_progress_invoice_menu"
      name="Draf Bills"
      action="construction.draft_progress_invoice_action"
      parent="construction.menu_subcontracting"
      sequence="70" />
  <!-- MENU DRAFT PROGRESS INVOICE -->

  <!-- FORMVIEW FOR PROGRESS INVOICE -->
  <record id="progress_invoice_view_form" model="ir.ui.view">
    <field name="name">Progress Invoice</field>
    <field name="model">progress.invoice</field>
    <field name="arch" type="xml">
      <form string="Invoice">
        <header>
          <button name="button_confirm" type="object" states="draft"      string="Confirm" class="oe_highlight" id="draft_confirm" groups="construction.group_senior_engineer"/>
          <button name="button_draft"   type="object" states="cancel"     string="Set to Draft" groups="construction.group_senior_engineer" />
          <button name="button_cancel"  type="object" states="draft,open" string="Cancel"  />
          <button name="button_approve" type="object" states="open"       string="Approve" />
          <field name="state" widget="statusbar" statusbar_visible="draft,open,approved,running,done,cancel" readonly="1"/>
        </header>
        <sheet>
          <div class="oe_title">
            <label string="Progress Invoice" attrs="{'invisible': [('state','=','draft')]}"/>
            <h1>
              <field name="name" readonly="1"/>
            </h1>
          </div>
          <group>
            <group>
              <field name="partner_id" context="{'search_default_contractor':1}" domain="[('supplier','=',True), ('category_id', '=', 'Contractor')]"/>
              <field name="reference"/>
              <field name="analytic_id" domain="[('tag_ids', '=', 'Project')]" />
              <!-- <field name="contract_id" class="oe_edit_only" options="{'no_create': True}"/> -->
              <field name="currency_id" groups="base.group_multi_currency"/>
              <field name="type" invisible="1"/>
            </group>
            <group>
              <field name="date_invoice" string="Date"/>
              <field name="number" />
              <field name="origin" attrs="{'invisible': [('origin','=',False)]}"/>
              <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
              <field name="journal_id" />
              <field name="account_id" />
            </group>
          </group>
          <!-- NOTEBOOK -->
          <notebook>
            <page string="Progress">
              <field name="progress_invoice_line_ids" attrs="{'readonly': [('state', 'in', ('open','approved','running','done','cancel'))]}"
                     context="{'analytic_id': analytic_id}" >
                <tree string="Progress Lines" editable="bottom" >
                  <!-- <field name="contract_line_id" invisible="1" /> -->
                  <!-- <field name="origin" invisible="1" /> -->
                  <!-- <field name="currency_id" invisible="1"/> -->
                  <field name="sequence" widget="handle"/>
                  <field name="product_id" 
                         domain="[('type','=','service')]"
                         context="{'partner_id':parent.partner_id, 'quantity':quantity,'uom':product_uom, 'company_id': parent.company_id}"/>
                  <field name="name"/>
                  <!-- <field name="csi_mf_id" string="CSI" /> -->
                  <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                  <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags"/>
                  <field name="uom_id" string="UOM" groups="product.group_uom" />
                  <!-- <field name="qty_accepted"/> -->
                  <!-- <field name="qty_previous"/> -->
                  <field name="quantity"/>
                  <!-- <field name="qty_total"/> -->
                  <!-- <field name="progress_percentage"/> -->
                  <field name="price_unit"/>
                  <field name="penalty" />
                  <field name="price_subtotal" widget="monetary"/>
                  <!-- <field name="discount_total" /> -->
                  <!-- <field name="price_total" widget="monetary"/> -->
                  <field name="discount" invisible="1" />
                  <field name="currency_id" invisible="1" />
               </tree>
               <form string="Bill Line">
                 <sheet>
                   <group>
                     <group>
                       <!-- <field name="product_id" context="{'partner_id': parent.partner_id}"/>
                       <field name="account_id" groups="account.group_account_user" />
                       <field name="name"/>
                       <field name="csi_mf_id" string="CSI" />
                       <field name="uom_id" string="UOM" groups="product.group_uom" />
                       <field name="quantity"/>
                       <field name="invoice_line_tax_ids" groups="account.group_account_user"/> -->
                       <field name="penalty"/>
                     </group>
                   </group>
                 </sheet>
               </form>
                </field>
              <group class="oe_subtotal_footer oe_right">
                <!-- <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field string="Net for current bill" name="amount_current_total" widget="monetary" options="{'currency_field': 'currency_id'}"/> -->
              </group>
              <div class="oe_clear"/>
            </page>
          </notebook>
          <!-- NOTEBOOK -->
        </sheet>
        <!-- MESSAGING VIEW -->
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
        <!-- MESSAGING VIEW -->
      </form>
    </field>
  </record>
  <!-- FORMVIEW FOR PROGRESS INVOICE -->


  <!-- TREE VIEW FOR PROGRESS INVOICE --> 
  <record id="progress_invoice_view_tree" model="ir.ui.view">
    <field name="name">Progress Invoice</field>
    <field name="model">progress.invoice</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="state" invisible="1"/>
        <field name="date"/>
        <field name="origin"/>
      </tree>
    </field>
  </record>
  <!-- TREE VIEW FOR PROGRESS INVOICE -->
</odoo>